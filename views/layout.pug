doctype html
html
  head
    title NodeKnowledgeBase
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href='/') NodeKnowledgeBase
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavDropdown' aria-controls='navbarNavDropdown' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavDropdown.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.nav-item
            a.nav-link.active(href='/') Home
          li.nav-item
            a.nav-link(href='/articles/add') Add Article
        ul.nav.navbar-nav.navbar-right
          li.nav-item
            a.nav-link(href='/users/register') Register
    .container
      br
      != messages('my_message_template', locals)
      if errors
        each error, i in errors
          div(class='alert alert-danger') #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy 2018
    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
