doctype html
html
  head
    title NodeKnowledgeBase
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand.mx-auto(href='/') NodeKnowledgeBase
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='.dual-collapse2')
        span.navbar-toggler-icon
      .navbar-collapse.collapse.w-100.order-1.order-md-0.dual-collapse2
        ul.navbar-nav.mr-auto
          if user
            li.nav-item
              a.nav-link(href='/articles/add') Add Article
        .navbar-collapse.collapse.w-100.order-3.dual-collapse2
          ul.navbar-nav.ml-auto
            if !user
              li.nav-item
                a.nav-link(href='/users/register') Register
              li.nav-item
                a.nav-link(href='/users/login') Login
            if user
              li.nav-item
                a.nav-link(href='/users/logout') Logout
    .container
      br
      != messages('my_message_template', locals)
      if errors
        each error, i in errors
          div(class='alert alert-danger') #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy 2018
    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
